{
    "name": "spatie/laravel-newsletter",
    "description": "Manage newsletters in Laravel 5",
    "keywords": [
        "laravel",
        "newsletter",
        "mailchimp"
    ],
    "homepage": "https://github.com/spatie/laravel-newsletter",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://murze.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "illuminate/support": "~5.1.0|~5.2.0|~5.3.0|~5.4.0",
        "drewm/mailchimp-api": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "^5.0",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Newsletter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Newsletter\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Newsletter\\NewsletterServiceProvider"
            ],
            "aliases": {
                "Newsletter": "Spatie\\Newsletter\\NewsletterFacade"
            }
        }
    }
}
